        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity BedInventory.
    -->
    <changeSet id="20210511153233-1" author="jhipster">
        <createTable tableName="bed_inventory">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="bed_count" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="occupied" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="on_cylinder" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="on_lmo" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="on_concentrators" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="last_modified" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="last_modified_by" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="bed_type_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="hospital_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="bed_inventory" columnName="last_modified" columnDataType="datetime"/>
    </changeSet>

